<Window x:Class="Lab_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_2"
        mc:Ignorable="d"
        Title="Greetings" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" Height="130">

    <StackPanel Orientation="Vertical" Width="289">
        <StackPanel Orientation="Horizontal" Margin="10">

            <Label Content="Введіть своє ім'я:" FontStyle="Italic" HorizontalAlignment="Right" />
            <TextBox Width="100" Height="20" Margin="31,-5" Name="txtName" />

        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="10,-10">

            <Label Content="Введіть назву групи:" FontStyle="Italic" HorizontalAlignment="Right" />
            <TextBox Width="100" Height="20" Margin="13,0" Name="Name" />

        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="80,30">
            <Button Name="btnOK" IsDefault="True" Content="OK" Margin="0,0,20,0" Width="50" Click="btnOK_Click" />
            <Button Name="btnCancel" IsCancel="True" Content="Cancel" Width="50" Click="btnCancel_Click" />
        </StackPanel>

    </StackPanel>
</Window>